{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/email-platform-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "Database": {
    "UseSqlite": false
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=tcp:emailapi.database.windows.net,1433;Initial Catalog=EmailDb;Persist Security Info=False;User ID=cadeboss;Password=HappyHippo25!;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyForJWTTokenGeneration123!",
    "Issuer": "EmailClientApi",
    "Audience": "EmailClientApp",
    "ExpirationMinutes": 60
  },
  "AWS": {
    "Region": "us-west-2",
    "Profile": "EmailAPI"
  },
  "SES": {
    "DefaultConfigurationSetName": "EmailAPI",
    "FromDomainVerificationRequired": true,
    "RateLimits": {
      "EmailsPerMinute": 14,
      "EmailsPerSecond": 1
    }
  },
  "SystemEmail": {
    "FromEmail": "noreply@yourdomain.com",
    "FromName": "Email Platform",
    "BaseUrl": "https://localhost:5173"
  }
}
